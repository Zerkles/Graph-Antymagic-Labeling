<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GraphApp.Controller">
   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Button fx:id="showGraphBtn" mnemonicParsing="false" onAction="#showGraphCanvas" text="Draw graph" GridPane.rowIndex="1" />
         <Button fx:id="addCellBtn" mnemonicParsing="false" onAction="#addCell" text="Add vertex" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <TextField fx:id="edgeStart" promptText="Cell 1" GridPane.rowIndex="2" />
         <TextField fx:id="edgeEnd" promptText="Cell 2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <Button fx:id="addEdgeBtn" mnemonicParsing="false" onAction="#addEdge" text="Add edge" GridPane.columnIndex="2" GridPane.rowIndex="2" />
         <Button fx:id="loadFromFIle" mnemonicParsing="false" onAction="#loadFromFile" text="Load graph" />
         <Button fx:id="saveToFile" mnemonicParsing="false" onAction="#saveToFile" text="Save graph" GridPane.columnIndex="1" />
         <Button fx:id="softSolvingBtn" mnemonicParsing="false" onAction="#softSolving" text="Soft Solving" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         <Button fx:id="hardSolvingButton" mnemonicParsing="false" onAction="#hardSolving" text="Hard solving" GridPane.columnIndex="2" />
      </children>
   </GridPane>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

    <!--    <Button text="Close App" fx:id="closeApp" onAction="#closeApp" GridPane.columnIndex="1" GridPane.rowIndex="1"/>-->
</GridPane>
